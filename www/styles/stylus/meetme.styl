almost-black = #191919
dark-grey = #333
light-grey = #B4B4B4
off-white = #fafffc
blue = #accecd
red = #8a151b
pink = #bc6367

html, body
  width: 100%
  height: 100%
  margin: 0
  font-family: source-sans-pro, sans-serif

#statusBar
  width: 100%
  height: 20px
  background: #f0f0f0
  border-bottom-width: 1px
  border-bottom-style: solid
  border-bottom-color: #404040

body
  font: 12px Helvetica, Arial, sans-serif
  background: #202020
  color: #f0f0f0
  height: 100%
  overflow: auto
  -webkit-overflow-scrolling: touch

.topcoat-button
  -webkit-border-radius: 5px
  -moz-border-radius: 5px
  border-radius: 10px
  margin-left: auto
  margin-right: auto

.hero-unit
  width: 100%
  height: 100%
  font-size: 18px
  font-weight: 200
  line-height: 30px

h1
  font-size: 60px
  margin: 10px
  font-family: orbitron
  line-height: 1
  letter-spacing: -1px
  color: #f0f0f0
  text-align: center
  text-shadow: 0px 2px 3px #c0c0c0

h2
  font-family: orbitron
  line-height: 1
  letter-spacing: -1px
  color: #191919
  text-shadow: 0px 2px 3px #555

img
  display: block
  -webkit-border-radius: 5px
  -moz-border-radius: 5px
  margin-left: auto
  margin-right: auto
  text-shadow: 0 -1px rgba(0,0,0,0.69)

#links, .facebook
  position: fixed
  bottom: 10px

.topcoat-tab-bar__button 
  padding: 0 1.25rem
  height: 3rem
  line-height: 3rem
  letter-spacing: 1px
  color: #c6c8c8
  text-shadow: 0 -1px rgba(0,0,0,0.69)
  vertical-align: top
  background-color: #595b5b
  box-shadow: inset 0 1px #727373
  border-top: 1px solid #303233


.topcoat-tab-bar__button:active,
.topcoat-tab-bar__button--large:active,
:checked + .topcoat-tab-bar__button 
  color: #5dc1ff
  background-color: #404141
  box-shadow: inset 0 0 2px #313231


.topcoat-tab-bar__button:focus,
.topcoat-tab-bar__button--large:focus 
  z-index: 1

#quick-guide
  height: 40px
  display: block
  line-height: 40px
  bottom: 90px
  left: 60px
  right: 60px

#radar-title
  padding: 5px

.facebook
  left: 50px
  right: 50px

#fb
  width: 240px
  border: none
  background-color: white
  box-shadow: inset 0 1px rgba(255,255,255,0.36)
  color: #202020
  font-weight: 500
  text-shadow: 0 -1px rgba(0,0,0,0.36)

