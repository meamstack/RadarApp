dark-grey = #585340
light-grey = #b7ae9d
off-white = #fafffc
blue = #accecd
red = #8a151b
pink = #bc6367

html, body
  width: 100%
  height: 100%
  margin: 0

#statusBar
  width: 100%
  height: 20px
  background: dark-grey

body
  font: 12px Helvetica, Arial, sans-serif
  background: #fafafa
  color: #333
  height: 100%
  width: 100%

.button
  -webkit-border-radius: 5px
  -moz-border-radius: 5px
  border-radius: 10px

.hero-unit
  margin: 50px auto 0 auto;
  width: 100%
  height: 100%
  font-size: 18px;
  font-weight: 200;
  line-height: 30px;
  background-color: #eee;
  border-radius: 6px;
  padding: 60px;

.hero-unit h1 
  font-size: 60px;
  line-height: 1;
  letter-spacing: -1px;

#mapCanvas 
  height: 100%
  width: 90%