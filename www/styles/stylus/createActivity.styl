.activityButton
  border: black 1px solid
  height: 50px
  width: 50px
  opacity: 0.5
  float: left

.activityButton:hover
  background-color: #3b68da
  cursor: pointer

border-radius()
  -webkit-border-radius: arguments
  -moz-border-radius: arguments
  border-radius: arguments

radial()
  /* fallback */
  background-color: #2f2727;
  background-image: url(images/radial_fancy.png);
  background-position: 80% 20%;
  background-repeat: no-repeat;

  background: -webkit-radial-gradient(arguments);
  background: -moz-radial-gradient(arguments);
  background: -ms-radial-gradient(arguments);



.createActivity
  radial 50% 50%, closest-corner, #1a82f7, #3d41a8
  width: 320px
  height: 500px
  padding: 0px
  margin-top: 20px

.pictureSaved img
  width: 80px
  height: 80px

#eventDate
  opacity: 0
  width: 70px
  border: 1px solid black