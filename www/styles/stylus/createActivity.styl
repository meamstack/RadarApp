blue = #accecd
.activityButton
  border-top: #3750B3 1px solid
  border-left: #3750B3 1px solid
  height: 40px
  width: 60px
  opacity: .5
  float: left
  color: white
  text-align: center

.activityButton:hover
  background-color: #3b68da
  cursor: pointer

border-radius()
  -webkit-border-radius: argument
  -moz-border-radius: argument
  border-radius: arguments

.photoSource
  font: black

#logo
  float: left
  font-size: 20px
  padding: 0px 0px
  margin: 10px 10px 0px 10px
  text-align: center

.createActivity
  width: 100%
  padding: 0px
  margin-top: 0px
  overflow: auto
  -webkit-overflow-scrolling:touch

.pictureSaved img
  max-height: 250px
  padding-top: 5%

.photo
  margin-top: 15px
  width: 100%
  height: 250px

.icon, .icon:visited
  color: black
  text-decoration: none

.iconTop,.iconTop:visited
  height: 26px
  width: 32px
  display: inline-block
  padding-left: 1px
  color: black

.icon-folder-open
  padding-right: 18px
  z-index: 2

.icon-camera-retro
  padding-right: 18px
  z-index: 2

.createEvent
  display: block
  margin-left: auto
  margin-right: auto
  margin-bottom: 30px
  line-height: 2rem
  border-radius: 5px
  width: 120px
  height: 40px
  text-align: center

.icon-map-marker
  padding-right: 18px
  z-index: 2

#eventDesc,#eventName
  width: 80%
  display: block
  margin-top: 8px
  padding-left: 5px

#eventDesc,#eventName,#eventDate, #eventTime
  background-color: #3a3a3a
  color: white
  border: none

.calendarDateSetter
  height: 58px
  width: 80%
  margin: 0 auto

#eventDate,#eventTime
  height: 48px
  width: 100%
  font-size: 15px
  background: black
  margin: 8px auto
  border-radius: 5px

#eventDate
  margin-left: 7px

#eventTime
  margin-left: 12px

::-webkit-datetime-edit-text
  // color: white
  // background: #3a3a3a

::-webkit-datetime-edit-month-field,::-webkit-datetime-edit-day-field,::-webkit-datetime-edit-year-field
  color: white
  font-size: 15px
  margin: 0
  background: #3a3a3a

::-webkit-datetime-edit-fields-wrapper
  background: #3a3a3a

::-webkit-inner-spin-button,::-webkit-calendar-picker-indicator
  display: none

::-webkit-input-placeholder
  color: grey
  background: #3a3a3a

.submitNav
  width: 100%
  margin-top: 8px

.topcoat-text-input
  padding: 0
  margin: 0 auto

.topcoat-text-input:focus,
.topcoat-text-input--large:focus 
  background-color: #e0e0e0
  color: #f0f0f0
  border: 1px solid #e0e0e0
  box-shadow: 0 0 0 2px #6fb5f1
  padding-left: 10px

.topcoat-text-input:disabled::-webkit-input-placeholder,
.topcoat-text-input:disabled::-moz-placeholder,
.topcoat-text-input:disabled:-ms-input-placeholder 
  color: #f0f0f0

.topcoat-text-input:invalid 
  border: 1px solid #d83b75

#createActivityHeader
  width: 100%
  height: 40px
  z-index:2
  font-size: 25px
  box-shadow: 0px 3px 3px #888888
  background: #e0e0e0
  display: block

#caHeaderLeft
  color: #191919
  float: left
  font-size: 20px
  padding: 0px 0px
  margin: 12px 10px 0px 10px

#caHeaderRight
  float: right
  padding: 0px 0px
  margin: 10px 10px 0px 10px
  font-size: 16px
  color: #191919

.clear
  opacity: 0

.block
  display:block

