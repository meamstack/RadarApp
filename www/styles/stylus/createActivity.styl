blue = #accecd
.activityButton
  border-top: #3750B3 1px solid
  border-left: #3750B3 1px solid
  height: 40px
  width: 60px
  opacity: .5
  float: left
  color: white
  text-align: center

.activityButton:hover
  background-color: #3b68da
  cursor: pointer

border-radius()
  -webkit-border-radius: argument
  -moz-border-radius: argument
  border-radius: arguments

.photoSource
  font: black

#logo
  float: left
  font-size: 20px
  padding: 0px 0px
  margin: 10px 10px 0px 10px
  text-align: center

.createActivity
  width: 100%
  padding: 0px
  margin-top: 0px
  overflow: auto
  -webkit-overflow-scrolling:touch

.pictureSaved img
  height: 250px

.photo
  margin-top: 15px
  position: relative
  width: 100%
  height: 250px
  z-index: 2

.icon, .icon:visited
  color: #191919
  text-decoration: none

.icon-folder-open
  padding-right: 18px
  z-index: 2

.icon-camera-retro
  padding-right: 18px
  z-index: 2

.createEvent
  display: block
  margin-left: auto
  margin-right: auto
  margin-bottom: 30px
  line-height: 2rem
  border-radius: 5px
  width: 120px
  height: 40px
  text-align: center

.icon-map-marker
  padding-right: 18px
  z-index: 2

#eventDesc
  width: 80%
  display: block
  margin-top:5px 
  background-color: transparent
  border: none

#eventName
  width: 80%
  margin-top:5px
  display: block
  position: relative
  top: 5px
  background-color: transparent
  border: none

.submitNav
  width: 100%

.calendarWrapper
  width: 100%
  height: 50px

.calendarDateSetter
  width: 255px
  margin-right: auto
  margin-left: auto

#eventDate
  width: 250px
  height: 37px
  display: inline
  font-size: 20px
  margin-top: 5px

.dateSet
  display: inline
  font-size: 13px
  pointer-events: none
  width: 113px

.block
  display:block

.activities 
  background rgb(135, 199, 135)
  width 200px
  height 50px

::-webkit-input-placeholder
  color: #909090
  background: #e0e0e0
  border-radius: 6px

.topcoat-text-input,
.topcoat-text-input--large 
  background: #e0e0e0 !important
  line-height: 3rem
  font-size: 16px
  letter-spacing: 1px
  border: none
  border-radius: 6px
  box-shadow: inset 0 1px rgba(0,0,0,0.18)
  color: #191919 !important
  vertical-align: top
  margin-right: auto
  margin-left: auto

.topcoat-text-input:focus,
.topcoat-text-input--large:focus 
  background: #e0e0e0
  color: #191919 !important
  border: none
  box-shadow: 0 0 0 2px #6fb5f1

.topcoat-text-input:disabled::-webkit-input-placeholder 
  color: #f0f0f0
  background: #e0e0e0

.topcoat-text-input:disabled::-moz-placeholder 
  color: #f0f0f0
  background: #e0e0e0

.topcoat-text-input:disabled:-ms-input-placeholder 
  color: #f0f0f0
  background: #e0e0e0


.topcoat-text-input:invalid 
  border: 1px solid #d83b75

#createActivityHeader
  width: 100%
  height: 40px
  z-index:2
  font-size: 25px
  box-shadow: 0px 3px 3px #888888
  background: #e0e0e0
  display: block

#caHeaderLeft
  color: #191919
  float: left
  font-size: 20px
  padding: 0px 0px
  margin: 12px 10px 0px 10px

#caHeaderRight
  float: right
  padding: 0px 0px
  margin: 10px 10px 0px 10px
  font-size: 16px
  color: #191919

