blue = #accecd
.activityButton
  border-top: #3750B3 1px solid
  border-left: #3750B3 1px solid
  height: 40px
  width: 60px
  opacity: .5
  float: left
  color: white
  text-align: center

.activityButton:hover
  background-color: #3b68da
  cursor: pointer

border-radius()
  -webkit-border-radius: argument
  -moz-border-radius: argument
  border-radius: arguments

.photoSource
  font: black

#logo
  float: left
  font-size: 20px
  padding: 0px 0px
  margin: 10px 10px 0px 10px
  text-align: center


.createActivity
  width: 100%
  padding: 0px
  margin-top: 0px
  overflow: auto
  -webkit-overflow-scrolling:touch

.pictureSaved img
  width: 100%
  height: 400px

.photo
  position: relative
  width: 100%
  height: 400px

.icon, .icon:visited
  color: white
  text-decoration: none

.icon-folder-open
  padding-right: 18px
  color: white
  z-index: 2

.icon-camera-retro
  padding-right: 18px
  color: white
  z-index: 2

.photo, .photo div
  width 300px
  height: 400px
  margin: auto

  z-index: 0

.createEvent
  display: block
  margin-left: auto
  margin-right: auto
  margin-bottom: 30px
  line-height: 2rem
  border-radius: 5px
  width: 120px
  height: 40px
  text-align: center

.icon-map-marker
  padding-right: 18px
  color: white
  z-index: 2

#eventDesc
  width: 80%
  display: block
  margin-top:5px 
  background-color: transparent
  border: none

::-webkit-input-placeholder
  color: grey

#eventName
  width: 80%
  margin-top:5px
  display: block
  position: relative
  top: 5px
  
  background-color: transparent
  border: none

.submitNav
  width: 100%

.calendarWrapper
  width: 100%
  height: 50px

.calendarDateSetter
  width: 255px
  margin-right: auto
  margin-left: auto

#eventDate
  width: 250px
  height: 37px
  display: inline
  font-size: 20px

.dateSet
  display: inline
  font-size: 13px
  pointer-events: none
  width: 113px

.block
  display:block

.activities 
  background rgb(135, 199, 135)
  width 200px
  height 50px

.topcoat-text-input,
.topcoat-text-input--large 
  line-height: 3rem
  font-size: 16px
  letter-spacing: 1px
  padding: 0 
  border: 1px solid #303233
  border-radius: 6px
  background-color: #404141
  box-shadow: inset 0 1px rgba(0,0,0,0.18)
  color: #c6c8c8
  vertical-align: top
  margin-right: auto
  margin-left: auto


.topcoat-text-input:focus,
.topcoat-text-input--large:focus 
  background-color: #646666
  color: #fff
  border: 1px solid #0940fd
  box-shadow: 0 0 0 2px #6fb5f1


.topcoat-text-input:disabled::-webkit-input-placeholder 
  color: #fff


.topcoat-text-input:disabled::-moz-placeholder 
  color: #fff


.topcoat-text-input:disabled:-ms-input-placeholder 
  color: #fff


.topcoat-text-input:invalid 
  border: 1px solid #d83b75

#createActivityHeader
  width: 100%
  height: 40px
  z-index:2
  font-size: 25px
  box-shadow: 0px 3px 3px #888888
  background: #191919
  display: block

#caHeaderLeft
  color: #fff
  float: left
  font-size: 20px
  padding: 0px 0px
  margin: 12px 10px 0px 10px

#caHeaderRight
  float: right
  padding: 0px 0px
  margin: 14px 10px 0px 10px
  font-size: 16px
  color: #b0b0b0

.activityForm
  overflow: auto
  -webkit-overflow-scrolling:touch
